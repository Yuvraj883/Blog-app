<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Include Head partial, which might contain meta tags, stylesheets, and title -->
  <%- include('./partials/Head') %>
  <title><%= blog.title %> | Blog Details</title>

  <!-- Custom CSS for styling (if needed) -->
  <style>
    .blog-cover-image {
      width: 100%;
      height: 400px;
      object-fit: cover;
    }
    .blog-content {
      margin-top: 30px;
    }
  </style>
</head>
<body>

  <!-- Include Navigation bar partial -->
  <%- include('./partials/Nav') %>

  <!-- Main content section -->
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-12 text-center">
        <h1><%= blog.title %></h1>
        <p class="text-muted">Posted by <%=blog.createdBy.fullName  %> on <%= blog.createdAt  %></p>
      </div>
    </div>

    <!-- Blog Cover Image -->
    <div class="row">
      <div class="col-md-12">
        <img src="../<%= blog.coverImage%>" alt="<%= blog.title %>" class="blog-cover-image img-fluid rounded">
      </div>
    </div>

    <!-- Blog Content -->
    <div class="row blog-content">
      <div class="col-md-12">
        <pre><%= blog.body %></pre>
      </div>
    </div>



  <!-- Include Scripts partial -->
  <%- include('./partials/Scripts') %>

</body>
</html>
